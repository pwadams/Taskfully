<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
<%= render partial: "shared/errors", locals: {object: @user, offset_option: 'col-md-offset-2' } %>
<div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class= "col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class= "col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class= "col-md-4">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class= "col-md-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
    <div class= "col-md-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%=f.label :pivotal_token, 'Pivotal Tracker Token',class:"control-label col-sm-2" %>
    <div class= "col-md-4">
      <%= f.text_field :pivotal_token, :value => @user.pivotal, class:"form-control" %>
    </div>
  </div>

  <% if current_user.admin %>
    <div class="form-group">
      <div class="checkbox">
        <div class="col-md-10 col-md-offset-2">
          <label>
            <%= f.check_box :admin %>
            <%= f.label :admin %>
          </label>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class= "col-md-4 col-md-offset-2" >
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", users_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
