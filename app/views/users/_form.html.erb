<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class= "col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class= "col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class= "col-md-3">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class= "col-md-4 col-md-offset-2" >
      <% if params[:action] == "edit" %>
      <%= link_to "delete", @user, method: "delete", class: "btn btn-default" %>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", users_path, class: "btn btn-default" %>
      <% else %>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", users_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
