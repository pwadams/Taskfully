<%= form_for [@project, @task], html: {class: "form-horizontal" } do |f| %>
<%=render partial: "shared/errors", locals: {object: @task} %>
  <div class="form-group">
    <%= f.label :description, class: "col-md-2 control-label" %>
    <div class= "col-md-3">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-md-2 control-label" %>
    <div class="col-md-3">
      <%=f.date_field :due_date, class: "form-control" %>
    </div>
  </div>

      <% unless @task.new_record? %>
  <div class="form-group">
    <div class="col-md-6 col-md-offset-2">
      <%= f.check_box :is_complete %>
      <%= f.label :complete %>
    </div>
  </div>
<% end %>

  <div class="form-group">
    <div class= "col-md-4 col-md-offset-2" >
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", project_tasks_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
