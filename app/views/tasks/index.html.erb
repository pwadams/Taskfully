<div class= "container">
    <div class="pull-right">
        <%=link_to "New Task", new_task_path, class: "btn btn-info" %>
    </div>
    <h1> Tasks </h1>

    <table class="table">
    <thead>
      <th> Description </th>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><label><%= task.description %></label></td>
        <td class="text-right">
          <%=link_to "Edit", edit_task_path(task), class:"btn btn-info" %>
          <%=link_to "Destroy", task, class: "btn btn-danger", method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>
</div>
