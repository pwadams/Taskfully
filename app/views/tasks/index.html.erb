<div class="container">
<div class="page-header">
  <h1>Tasks <%=link_to "New Task", new_task_path, class: "btn btn-info pull-right" %></h1>
</div>

<table class="table">
  <thead>
    <th><h3>Description<h3></th>
  </thead>

  <tbody>
        <tr>
        <% @tasks.each do |task| %>
          <td>
            <% if task.is_complete %>
             <s><%= link_to task.description, task_path(task) %></s>
            <% else %>
            <%= link_to task.description, task_path(task) %>
            <% end %>
          </td>

          <td>
            <% if task.due_date %>
            <%= task.due_date.strftime("%m/%d/%Y") %>
            <% else %>
            <% end %>
          </td>

          <td class="text-right">
              <%=link_to "Edit", edit_task_path(task), class:"btn btn-info" %>
              <%=link_to "Destroy", task, class: "btn btn-danger", method: :delete %>
            </td>
          </tr>
    <% end %>
  </tbody>
</table>
</div>
