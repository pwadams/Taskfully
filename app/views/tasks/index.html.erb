<div class= "container">
    <div class="pull-right">
        <%=link_to "New Task", new_task_path, class: "btn btn-info" %>
    </div>
    <h1> Tasks </h1>

    <% @tasks.each do |task| %>
    <table class="table">
      <div class="row">
        <div class="col-md-10">
          <%= task.description %>
        </div>

        <div class="col-md-2">
          <p class="text-right">
          <%=link_to "Edit", edit_task_path(task), class:"btn btn-info" %>
          <%=link_to "Destroy", task, class: "btn btn-danger", method: :delete %>
          </p>
        </div>
      </div>
    </table>
    <% end %>
</div>
