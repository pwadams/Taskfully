<div class="jumbotron">
    <h1 class="panel-title">TaskFull</h1>
    <p>Your Work, organized.</p>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4"><%= image_tag("hands.jpg", class: "img-responsive") %></div>
    <div class="col-md-4"><%= image_tag("headphones.jpg", class: "img-responsive") %></div>
    <div class="col-md-4"><%= image_tag("tablet.jpg", class: "img-responsive") %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          Grouped by projects and lists. Customized.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Permissions</h3>
        </div>
        <div class="panel-body">
          Fine-grained permissions
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents.</li>
            <li>Get email notifications.</li>
          </ul>
        </div>
      </div>
    </div>
</div>

    <% @quotes.each do |author, quote| %>
    <p><%= quote %></p>
    <p><em class="text_muted"> <%= author %></em></p>
    <% end %>
